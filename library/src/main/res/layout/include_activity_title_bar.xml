<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_base_invest"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fl_tb_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tb_back"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/lib_toolbar_back" />

                <TextView
                    android:id="@+id/tv_tb_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:minWidth="10dp"
                    android:textColor="@color/black9"
                    android:textSize="15sp"
                    android:visibility="visible" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_tb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="主标题"
                android:textColor="@color/black9"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_tb_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/tv_tb_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-3dp"
                android:text="副标题"
                android:textColor="@color/black9"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_tb_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/black9"
                android:gravity="center"
                android:textSize="15sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_tb_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

</LinearLayout>